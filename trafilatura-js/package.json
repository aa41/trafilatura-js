{
  "name": "trafilatura-js",
  "version": "0.1.0",
  "description": "JavaScript port of Trafilatura - Web scraping and text extraction for browsers",
  "main": "dist/trafilatura.cjs.js",
  "module": "dist/trafilatura.esm.js",
  "browser": "dist/trafilatura.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "web-scraping",
    "text-extraction",
    "html-parsing",
    "content-extraction",
    "metadata-extraction",
    "browser",
    "trafilatura"
  ],
  "author": "Trafilatura JS Contributors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/adbar/trafilatura"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
