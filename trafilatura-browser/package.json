{
  "name": "trafilatura-browser",
  "version": "1.0.0",
  "description": "Trafilatura的浏览器版本 - 像素级精确的内容提取库",
  "main": "dist/trafilatura.cjs.js",
  "module": "dist/trafilatura.esm.js",
  "browser": "dist/trafilatura.browser.js",
  "unpkg": "dist/trafilatura.browser.min.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "serve": "python3 -m http.server 8080"
  },
  "keywords": [
    "web-scraping",
    "content-extraction",
    "html-parser",
    "text-extraction",
    "metadata-extraction",
    "browser"
  ],
  "author": "Trafilatura Team",
  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "babel-jest": "^30.2.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^2.79.1"
  },
  "dependencies": {},
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-console": "off"
    }
  }
}
